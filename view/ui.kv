<Manager>
    Screen:
        name: "start"
        MDRaisedButton:
            text: "Новый профиль"
            pos_hint: {"center_x": .5, "center_y": .6}
            on_release: root.current = "new"
            #md_bg_color: "red"
        MDRaisedButton:
            text: "Загрузить профиль"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.current = "download"
        MDRectangleFlatButton:
            text: "Выход"
            pos_hint: {"center_x": .5, "center_y": .4}
            on_release: root.stop()

    Screen:
        name: "new"
        MDLabel:
            text: "Введите:"
            halign: "center"
        MDRaisedButton:
            text: "Готово"
            pos_hint: {"center_x": .5, "center_y": .2}
            on_release: root.current = "main"

    Screen:
        name: "download"
        MDLabel:
            text: "Профили:"
            halign: "center"
        MDRaisedButton:
            text: "Загрузить"
            pos_hint: {"center_x": .7, "center_y": .2}
            on_release: root.current = "main"
        MDRaisedButton:
            text: "Удалить"
            pos_hint: {"center_x": .3, "center_y": .2}

    Screen:
        name: "main"
        MDRaisedButton:
            text: "Профиль"
            pos_hint: {"center_x": .7, "center_y": .6}
            on_release: root.current = "profile"
        MDRaisedButton:
            text: "Билет"
            pos_hint: {"center_x": .7, "center_y": .5}
            on_release: root.current = "ticket"
        MDRectangleFlatButton:
            text: "Выход"
            pos_hint: {"center_x": .7, "center_y": .4}
            on_release: root.current = "start"
        MDRaisedButton:
            text: "Стадион1"
            pos_hint: {"center_x": .3, "center_y": .6}
            on_release: root.current = "stadium"
        MDRaisedButton:
            text: "Стадион2"
            pos_hint: {"center_x": .3, "center_y": .5}
            on_release: root.current = "stadium"
        MDRaisedButton:
            text: "Стадион3"
            pos_hint: {"center_x": .3, "center_y": .4}
            on_release: root.current = "stadium"

    Screen:
        name: "profile"
        MDLabel:
            text: "Профиль"
            halign: "center"
        MDRaisedButton:
            text: "Назад"
            pos_hint: {"center_x": .5, "center_y": .2}
            on_release: root.current = "main"

    Screen:
        name: "ticket"
        MDLabel:
            text: "Билет "
            halign: "center"
        MDRaisedButton:
            text: "Назад"
            pos_hint: {"center_x": .5, "center_y": .2}
            on_release: root.current = "main"

    Screen:
        name: "stadium"
        MDLabel:
            text: "Стадион"
            halign: "center"
        MDRaisedButton:
            text: "Свободные места"
            pos_hint: {"center_x": .2, "center_y": .7}
            on_release: root.current = "places"
        MDRaisedButton:
            text: "Занять место"
            pos_hint: {"center_x": .2, "center_y": .6}
            #on_release: root.current = "screen1"
        MDRaisedButton:
            text: "Магазин"
            pos_hint: {"center_x": .2, "center_y": .5}
            on_release: root.current = "shop"
        MDRectangleFlatButton:
            text: "Уйти"
            pos_hint: {"center_x": .2, "center_y": .3}
            on_release: root.current = "main"

    Screen:
        name: "places"
        MDLabel:
            text: "Свободные места"
            halign: "center"
        MDRaisedButton:
            text: "Купить"
            pos_hint: {"center_x": .6, "center_y": .3}
            #on_release: root.current = "screen1"
        MDRectangleFlatButton:
            text: "Назад"
            pos_hint: {"center_x": .4, "center_y": .3}
            on_release: root.current = "stadium"

    Screen:
        name: "shop"
        MDLabel:
            text: "Магазин"
            halign: "center"
        MDRaisedButton:
            text: "Купить"
            pos_hint: {"center_x": .6, "center_y": .3}
            #on_release: root.current = "screen1"
        MDRectangleFlatButton:
            text: "Назад"
            pos_hint: {"center_x": .4, "center_y": .3}
            on_release: root.current = "stadium"

